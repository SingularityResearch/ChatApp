@page "/admin/reporting/{UserId}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using ChatApp.Services
@using ChatApp.Models
@using Microsoft.AspNetCore.Identity
@inject IChatMessageService ChatMessageService
@inject UserManager<Data.ApplicationUser> UserManager
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Detailed User Activity</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Detailed Activity</h1>
            <p class="lead">Message history for <strong>@(_userName ?? "Loading...")</strong></p>
        </div>
        <a href="admin/reporting" class="btn btn-outline-light"><i class="bi bi-arrow-left pe-2"></i>Back to Report</a>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card bg-dark text-white border-secondary">
                <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-ul pe-2"></i>Itemized Message Log</h5>
                    <button class="btn btn-sm btn-outline-light" @onclick="LoadDetails"><i
                            class="bi bi-arrow-clockwise pe-1"></i>Refresh</button>
                </div>
                <div class="card-body p-0">
                    <table class="table table-dark table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Direction</th>
                                <th>Participants</th>
                                <th>Date/Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (_details == null)
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-3">Loading details...</td>
                                </tr>
                            }
                            else if (!_details.Any())
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-3">No message history found for this
                                        user.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var detail in _details)
                                {
                                    <tr>
                                        <td>
                                            @if (detail.Direction == "Sent")
                                            {
                                                <span class="badge bg-primary text-white"><i
                                                        class="bi bi-arrow-up-right me-1"></i>Sent</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-dark border border-secondary text-light"><i
                                                        class="bi bi-arrow-down-left me-1"></i>Received</span>
                                            }
                                        </td>
                                        <td>@detail.OtherParties</td>
                                        <td>@detail.Timestamp.ToString("g")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    private string? _userName;
    private List<UserMessageDetailDto>? _details;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(UserId))
        {
            var user = await UserManager.FindByIdAsync(UserId);
            _userName = user?.UserName ?? "Unknown User";

            await LoadDetails();
        }
    }

    private async Task LoadDetails()
    {
        _details = null;
        _details = await ChatMessageService.GetUserMessageDetailsAsync(UserId);
        StateHasChanged();
    }
}
