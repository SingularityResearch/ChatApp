@using ChatApp.Models

<div
    class="chat-header p-2 border-bottom border-secondary bg-mica-alt d-flex justify-content-between align-items-center">
    <strong>@Conversation.DisplayName</strong>
    @if (Conversation.ConversationId != "global")
    {
        <button class="btn btn-sm btn-outline-secondary border-0" @onclick="OnToggleDetails" title="Conversation Details">
            <i class="bi bi-info-circle fs-5"></i>
        </button>
    }
</div>

<div class="chat-messages" id="chatScrollView">
    @foreach (var msg in Conversation.Messages)
    {
        <MessageBubble Message="msg" IsGroup="@Conversation.IsGroup" OnStartEdit="OnStartEdit" OnDelete="OnDelete"
            OnSaveEdit="OnSaveEdit" OnCancelEdit="OnCancelEdit" OnReply="OnReply" OnToggleReaction="OnToggleReaction" />
    }
</div>

<ChatInput @ref="chatInput" IsConnected="@IsConnected" OnSend="OnSend" OnFileChange="OnFileUpload" />

@code {
    [Parameter] public ConversationViewModel Conversation { get; set; } = new();
    [Parameter] public bool IsConnected { get; set; }
    [Parameter] public EventCallback OnToggleDetails { get; set; }
    [Parameter] public EventCallback<string> OnSend { get; set; }
    [Parameter] public EventCallback<InputFileChangeEventArgs> OnFileUpload { get; set; }

    // Bubble Events
    [Parameter] public EventCallback<ChatMessage> OnStartEdit { get; set; }
    [Parameter] public EventCallback<ChatMessage> OnDelete { get; set; }
    [Parameter] public EventCallback<ChatMessage> OnSaveEdit { get; set; }
    [Parameter] public EventCallback<ChatMessage> OnCancelEdit { get; set; }
    [Parameter] public EventCallback<ChatMessage> OnReply { get; set; }
    [Parameter] public EventCallback<(ChatMessage, string)> OnToggleReaction { get; set; }

    private ChatInput? chatInput;

    public async Task SetInputAsync(string text)
    {
        if (chatInput != null)
        {
            await chatInput.SetInputAsync(text);
        }
    }

    public async Task SetReplyMessageAsync(ChatMessage msg)
    {
        if (chatInput != null)
        {
            await chatInput.SetReplyMessageAsync(msg);
        }
    }
}

<style>
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
</style>
